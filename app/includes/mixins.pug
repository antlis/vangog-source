mixin photoCard(photoNum, info, linkHref)
    .col-sm-8.col-md-4.align-self-center.p-5
      figure.photo-wrap
        img.img-fluid(src="/images/photos/photo_" + photoNum + ".jpg", alt="Фото " + photoNum)
        figcaption
            a.photo-title(href="#0")= info
            a.photo-arrow-link(href='#0')
                svg.svg-icon
                    use.photo-svg-icon(xlink:href='#right-arrow')

mixin sectionHeader(smallTitle, mainTitle)
    header.main-section-header
        p.title-icon= smallTitle
        h3.section-title= mainTitle

mixin advantage(icon, title, content)
    section
      i(class=icon).advantage-icon
      h4.advantage-title= title
      p= content

